<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hermes</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HermesChat_TeamA.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="highest-part">
            <h4>Let's Chat!</h4>
            <a asp-area="" asp-controller="Home" asp-action="Profile">Profile</a>
            @* <button
            aria-expanded="false" aria-label="Toggle navigation">
            <span></span>
            </button>*@
            <div>
                <partial name="_LoginPartial.cshtml" />
            </div>

        </nav>
    </header>


    <main class="main-container" role="main">
        @(await Html.PartialAsync("Sidebar"))
        @RenderBody()


    </main>


    <footer>
        <div>
            &copy; 2023 - Hermes
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
